<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <!-- passing in explicitly our own variable, local product -->
  <%= render 'product_details', product: @product %>
  <!-- Equivalent to => it's a method called with 2 arguments,  a path and a hash  -->
  <%# render 'product_details', { product: @product, msg: 'Hello' } %>

</section>